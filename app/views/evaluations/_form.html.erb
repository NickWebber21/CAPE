<%= form_with(model: evaluation) do |form| %>
  <% if evaluation.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(evaluation.errors.count, "error") %> prohibited this evaluation from being saved:</h2>

      <ul>
        <% evaluation.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :user_id, style: "display: block" %>
    <%= form.hidden_field :user_id, value: current_user.id %>
    <%= form.text_field :user_name, value: "#{current_user.first} #{current_user.last}", readonly: true %>*
  </div>

  <div>
    <%= form.label :presentation_id, style: "display: block" %>
    <%= form.hidden_field :presentation_id, value: @presentation.id %>
    <%= form.text_field :presentation_title, value: @presentation.title, readonly: true %>*
  </div>

  <h2>Presentation Organization</h2>
  <div class= "radio-options">

  <div class= "radio-option">
    <%= form.label "The introduction gave me a clear idea of the topic", style: "display: block" %>
    <%= form.collection_radio_buttons :clear_topic_intro, 
    [[5, 'Strongly Agree'], [4, 'Agree'], [3, 'Indifferent'], [2, 'Disagree'], [1, 'Strongly Disagree']],
    :first, :last, required: true %>
  </div>

  <div class= "radio-option">
    <%= form.label "The introduction gave me a clear idea of the direction the presentation would take", style: "display: block" %>
    <%= form.collection_radio_buttons :clear_direction_intro,
    [[5, 'Strongly Agree'], [4, 'Agree'], [3, 'Indifferent'], [2, 'Disagree'], [1, 'Strongly Disagree']],
    :first, :last, required: true %>
  </div>

  <div class= "radio-option">
    <%= form.label "The presentation presented information in logical, interesting sequence", style: "display: block" %>
    <%= form.collection_radio_buttons :logical_sequence,
    [[5, 'Strongly Agree'], [4, 'Agree'], [3, 'Indifferent'], [2, 'Disagree'], [1, 'Strongly Disagree']],
    :first, :last, required: true %>
  </div>

  <div class= "radio-option">
    <%= form.label "The conclusion did a good job of summarizing the content of the presentation", style: "display: block" %>
    <%= form.collection_radio_buttons :good_summary_conclusion, 
    [[5, 'Strongly Agree'], [4, 'Agree'], [3, 'Indifferent'], [2, 'Disagree'], [1, 'Strongly Disagree']],
    :first, :last, required: true %>
  </div>

  <div class= "radio-option">
    <%= form.label "Enough essential information was given to allow me to effectively evaluate the topic", style: "display: block" %>
    <%= form.collection_radio_buttons :enough_information, 
    [[5, 'Strongly Agree'], [4, 'Agree'], [3, 'Indifferent'], [2, 'Disagree'], [1, 'Strongly Disagree']],
    :first, :last, required: true %>
  </div>

  <div class= "radio-option">
    <%= form.label "The presentation was free from irrelevant or filler information", style: "display: block" %>
    <%= form.collection_radio_buttons :free_from_filler, 
    [[5, 'Strongly Agree'], [4, 'Agree'], [3, 'Indifferent'], [2, 'Disagree'], [1, 'Strongly Disagree']],
    :first, :last, required: true %>
  </div>

  <div class= "radio-option">
    <%= form.label "The presentation filled the time allotted", style: "display: block" %>
    <%= form.collection_radio_buttons :filled_time, 
    [[5, 'Strongly Agree'], [4, 'Agree'], [3, 'Indifferent'], [2, 'Disagree'], [1, 'Strongly Disagree']],
    :first, :last, required: true %>
  </div>
  </div>

  <h2>Presentation Content</h2>
  <div class= "radio-options">

  <div class= "radio-option">
    <%= form.label "I could easily follow the main points of the presentation", style: "display: block" %>
    <%= form.collection_radio_buttons :easily_follow, 
    [[5, 'Strongly Agree'], [4, 'Agree'], [3, 'Indifferent'], [2, 'Disagree'], [1, 'Strongly Disagree']],
    :first, :last, required: true %>
  </div>

  <div class= "radio-option">
    <%= form.label "The presenter had a clear understanding of the material presented", style: "display: block" %>
    <%= form.collection_radio_buttons :presenter_clear_understanding, 
    [[5, 'Strongly Agree'], [4, 'Agree'], [3, 'Indifferent'], [2, 'Disagree'], [1, 'Strongly Disagree']],
    :first, :last, required: true %>
  </div>

  <div class= "radio-option">
    <%= form.label "The plans, recommendations and/or conclusions are consistent with the findings", style: "display: block" %>
    <%= form.collection_radio_buttons :consistent_findings, 
    [[5, 'Strongly Agree'], [4, 'Agree'], [3, 'Indifferent'], [2, 'Disagree'], [1, 'Strongly Disagree']],
    :first, :last, required: true %>
  </div>

  <div class= "radio-option">
    <%= form.label "Presenter answers all questions with explanations and elaboration", style: "display: block" %>
    <%= form.collection_radio_buttons :questions_answered, 
    [[5, 'Strongly Agree'], [4, 'Agree'], [3, 'Indifferent'], [2, 'Disagree'], [1, 'Strongly Disagree']],
    :first, :last, required: true %>
  </div>
  </div>

  <h2>Presentation Visuals</h2>
  <div class= "radio-options">

  <div class= "radio-option">
    <%= form.label "The visuals were effective in enhancing the message", style: "display: block" %>

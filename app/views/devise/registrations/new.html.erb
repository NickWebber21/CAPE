<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", required: true %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", required: true %>
  </div>

  <br>

  <div class="field">
    <%= f.text_field :first, autofocus: true, placeholder: 'First Name', required: true %>
    <%= f.text_field :last, autofocus: true, placeholder: 'Last Name', required: true %>
  </div>

  <br>

  <div class="field">
  <% if @course == nil%>
    <%= f.collection_select :course_id, Course.all, :id, :name, { prompt: 'Select a course' }, { class: 'drop-down', required: true } %>
  <%else%>
    <% @user.course_id = params[:course_id] %>
    <strong> Course: </strong><%= @course.name%>
  <%end%>
  </div>

  <br>

  <div class="field">

    
    <strong> Role: </strong><%= f.select :role, options_for_select(['Instructor/TA', 'Student'], selected: @role), { prompt: 'Select a role' }, { class: 'drop-down', required: true, disabled: true } %>

  </div>

  <br>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

<% provide(:title, "Users") %>
<h1>Listing Users</h1>

<table class= "display_table">
  <thead>
    <tr>
      <th>Email</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Courses</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <% if user.course == current_user.course%>
        <tr>
          <td><%= user.email %></td>
          <td><%= user.first %></td>
          <td><%= user.last %></td>
          <td><%= user.course.name %></td>
          <td><%= user.role %></td>
          <td><%= link_to 'Show', user %></td>
          <td><%= button_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>
<br>

<%= link_to "Back to Home Page", home_path %>
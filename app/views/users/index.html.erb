<% provide(:title, "Users") %>
<h1>Listing Users</h1>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>First</th>
      <th>Last</th>
      <th>Courses</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <% if user.courses == current_user.courses%>
        <tr>
          <td><%= user.email %></td>
          <td><%= user.first %></td>
          <td><%= user.last %></td>
          <td><%= user.courses %></td>
          <td><%= user.role %></td>
          <td><%= link_to 'Show', user %></td>
          <td><%= button_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>